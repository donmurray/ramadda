<types>

  <type name="type_metadata_collection"  description="RAMADDA Data Definition Collection" handler="org.ramadda.plugins.metameta.MetadataCollectionTypeHandler" childtypes="type_metadata_definition">
     <property name="icon" value="/metameta/databases.png"/>
     <property name="form.resource.show" value="false"/>
     <property name="form.area.show" value="false"/>
     <property name="form.date.show" value="false"/>
  </type>

  <type name="type_metadata_definition"  description="RAMADDA Data Definition" handler="org.ramadda.plugins.metameta.MetadataDefinitionTypeHandler" childtypes="type_metadata_field">
     <property name="icon" value="/metameta/database_table.png"/>
     <property name="form.resource.show" value="false"/>
     <property name="form.area.show" value="false"/>
     <property name="form.date.show" value="false"/>

     <column name="field_index"  type="int"   default="-1"   label="Index" columns="4"  showinhtml="true"/>
     <column name="type"  type="enumeration"     label="Type" values="entry,metadata,database,datafile"  showinhtml="true"/>

     <column name="short_name" type="string"     label="Short Name" columns="80"  showinhtml="true"/>
     <column name="super_type" type="string"     label="Super Type" columns="80"  showinhtml="true"/>

     <column name="isgroup" type="boolean" default="false"    label="Is Group"  showinhtml="true" />
     <column name="handler_class" type="string"     label="Handler Class"  showinhtml="true" />
     <column name="properties" size="500" rows="5"  type="string"     label="Properties" suffix="extra name=value pairs&lt;br&gt;"/>

     <column name="wiki_text" size="2000" rows="10"  type="string"     label="Wiki Text" suffix="" default=""/>


<wiki><![CDATA[
{{table}}
<br>
{{metadata.bulkform message=""}}
]]>
</wiki>
 </type>


  <type name="type_metadata_field"  description="RAMADDA Data Field" handler="org.ramadda.plugins.metameta.MetadataFieldTypeHandler">
     <property name="form.resource.show" value="false"/>
     <property name="icon" value="/metameta/database_gear.png"/>

     <property name="form.area.show" value="false"/>
     <property name="form.date.show" value="false"/>
     <column name="field_index"  type="int"   default="-1"   label="Index" columns="4"  showinhtml="true"/>
     <column name="field_id" type="string"     label="Field ID" columns="80"  showinhtml="true"/>
     <column name="datatype"  type="enumeration"   label="Data Type" values="file:/org/ramadda/repository/resources/columntypes.properties"/>

     <column name="enumeration_values" size="500" rows="5"  type="string"     label="Enumeration Values" suffix="extra name=value enumeration values" canlist="false"/>
     <column name="properties" size="500" rows="5"  default="#name=value" type="string"     label="Properties" />

     <column name="textfield_rows" type="int"     default="1" label="Text Field Rows" columns="5"  showinhtml="true" xxxgroup="" canlist="false"/>
     <column name="textfield_columns" type="int"     default="60" label="Text Field Columns" columns="5"  showinhtml="true" canlist="false"/>
     <column name="database_column_size" type="int"   default="200"  label="Database Column Size" columns="5"  showinhtml="true" canlist="false"/>

     <column name="missing" type="string"     label="Missing Value" columns="10"  showinhtml="true" group="Fields for Data" canlist="false"/>
     <column name="unit" type="string"        label="Unit" columns="10"  showinhtml="true" canlist="false"/>

<wiki><![CDATA[
{{information}}

{{tree message=""}}
]]>
</wiki>
 </type>


</types>
