<types>

  <type name="biblio"  description="Bibliographic Entry" handler="org.ramadda.plugins.biblio.BiblioTypeHandler" category="Information">
     <property name="icon" value="/biblio/book.png"/>
     <property name="form.name.label" value="Title"/>
     <property name="form.description.label" value="Abstract"/>
<!--
     <property name="form.url.show" value="true"/>
     <property name="form.file.show" value="false"/>
-->

     <property name="html.type.show" value="false"/>
     <property name="form.location.show" value="false"/>
     <property name="form.fromdate.label" value="Date"/>
     <property name="form.todate.show" value="false"/>

     <property name="search.label" value="Search for Bibliographic entries"/>
     <property name="search.tabs" value="list"/>
     <property name="search.form.area.show" value="false"/>
     <property name="search.synthetic.fields" value="authors"/>
     <property name="search.synthetic.authors.label" value="All Authors"/>
     <property name="search.synthetic.authors.fields" value="primary_author,other_authors"/>


     <column name="primary_author" type="string" size="500" changetype="true"  label="Primary Author"  cansearch="true"/>
     <column name="type" type="enumerationplus"  label="Publication Type" values="Journal Article,Generic,Report"  cansearch="true" iscategory="true"/>
     <column name="institution" type="string"  label="Institution"  />
     <column name="other_authors" type="list"  changetype="true" size="5000" label="Other Authors"  rows="5" cansearch="true"/>
     <column name="publication" type="enumerationplus"  label="Publication"  />
     <column name="volume_number" type="string"  label="Volume"  canlist="false"/>
     <column name="issue_number" type="string"  label="Issue"   canlist="false"/>
     <column name="pages" type="string"  label="Pages"   canlist="false"/>
     <column name="doi" type="string"  label="DOI"   canlist="false"/>
     <column name="link" type="url"  label="Link"   canlist="false"/>
   </type>


</types>
