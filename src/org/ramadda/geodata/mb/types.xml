<types>

  <type name="type_mb"  description="MB Bathymetry" handler="org.ramadda.geodata.mb.MbTypeHandler" category="Oceanography" pattern=".*\.mb[0-9]+">
     <property name="icon" value="/mb/mb.png"/>
     <property name="form.altitude.show" value="true"/>
     <column name="format" label="Format"  type="enumerationplus"   values="file:/org/ramadda/geodata/mb/mbtypes.txt"/>
     <column name="number_of_records" label="Number of records"  type="int"/>
     <column name="total_track_length" label="Track length"  type="double"/>

    <service link="geo_mb_mbinfo">
      <params>
          <param name="geo_mb_mbinfo.xml">true</param>
      </params>
    </service>
    <service link="geo_mb_mblist" target="sibling" target.type="type_mb_point_basic"/>
   </type>

  <type name="type_mb_point_basic"  
        super="type_point" 
        icon="/mb/mb.png"
        description="Basic MB point file"  
        handler="org.ramadda.data.services.PointTypeHandler">
    <property name="icon" value="/mb/mb.png"/>
    <property name="record.file.class" value="org.ramadda.data.point.text.CsvFile"/>
<property name="record.properties">
delimiter=tab
fields=time[format="yyyy/MM/dd/HH/mm/ss"],longitude[unit="degrees"],latitude[unit="degrees"],depth[chartable="true" searchable="true"],amplitude[chartable="true" searchable="true"]
</property>

<wiki>
<![CDATA[
<div class="wiki-h2">{{name}} </div>

{{description}}

<table width=100% cellpadding=5>
<tr valign=top>
<td width="100%">
{{displaygroup layoutType="columns"}}
{{display type="map"  height="300"  width="400" column="1" layoutHere="false" defaultMapLayer="google.satellite"}}
{{display row="0" fields="depth" title="Depth"  height="150" column="0" layoutHere="false"}}
{{display row="0" fields="amplitude" title="Amplitude"  height="150" column="0" layoutHere="false"}}
</td>
</tr></table>

{{information}}


]]></wiki>

</type>


</types>
