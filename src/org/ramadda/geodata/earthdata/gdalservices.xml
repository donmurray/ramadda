  <services category="Earth Science Data">
    <service label="Create image from GeoTIFF" id="gdal.tiff2image" command="${geo.gdal.path}/gdal_translate" outputToStderr="true">
<description>
Run gdal_translate to make an image from a geotiff
</description>
<arg value="-of"/>
<arg value="png"/>
<arg value="${entry.file}"   type="entry" primary="true" entryPattern="(.*\.tif|.*\.tiff)"></arg>
<arg value="${file}" file="${entry.file.base}.png"></arg>
          <output pattern=".*\.png" type="type_image"/>
    </service>

    <service label="GDAL Info" id="gdal.info" command="${geo.gdal.path}/gdalinfo" xoutputToStderr="true">
<description>
Run gdalinfo
</description>
<arg value="${entry.file}"   type="entry" primary="true" entryPattern="(.*\.tif|.*\.tiff)"></arg>
   <output showResults="true" stdout="true"/>
    </service>

</services>
