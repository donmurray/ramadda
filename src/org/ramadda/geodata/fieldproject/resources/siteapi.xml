
<api handler="org.ramadda.repository.search.SpecialSearch" id="project_site">

<!--The search form label -->
      <property name="label" value="Sites"/>
      <property name="searchopen" value="true"/>

<!--What tabs to display results in -->
      <property name="tabs" value="map,list"/>

<!--Add these metadata search elements to the search form -->
    <property name="metadatatypes" value="project_person"/>

<!--The entry point. This corresponds to the below API entry -->
      <property name="searchurl" value="/project/site/search"/>
      <property name="initsearch" value="true"/>
      <property name="form.date.show" value="false"/>

<!--The entry type to search for -->
      <property name="type" value="project_site"/>


<!-- None of the API entry points defined below require admin privileges -->
      <property name="admin" value="false"/>

      <api request="/project/site/search"    method="processSearchRequest" toplevel="false" name="Search Sites"/>

</api>
