<types>

  <type name="project_project"  description="Project" handler="org.ramadda.geodata.fieldproject.FieldProjectTypeHandler" category="Field Project">
     <property name="icon" value="/fieldproject/page_world.png"/>
     <property name="form.resource.show" value="false"/>
     <property name="form.datatype.show" value="false"/>
     <property name="form.altitude.show" value="false"/>
     <property name="form.altitude.show.top" value="false"/>
     <column name="project_type"  type="enumerationplus"  label="Project Type"/>
     <wiki><![CDATA[{{description}}
<table width=100%><tr valign=top>
<td width=50%>{{tree}}</td>
<td width=50%>{{mapentry}}</td></tr>
</table>
'''Properties'''
<block open="false" title="Click to view metadata">
{{properties}}
</block>
]]></wiki>
   </type>


    <type name="project_day" description="Field Day" category="Field Project" handler="org.ramadda.repository.type.ExtensibleGroupTypeHandler">
    </type>


    <type name="project_day" description="Project Day" category="Field Project" >
      <property name="icon" value="/fieldproject/notebook.png"/> 
      <property name="form.name.label" value="Day"/>
      <property name="form.description.label" value="Notes"/>

      <column name="location" label="Where" datatype="enumerationplus" values=""/>
      <column name="who" label="Who" rows="5"/>

Files 

<!--
      <column name="instruments" label="Instruments" rows="5"/>
-->
      <column name="conditions" label="Conditions" rows="5"/>
<!--
      <column name="notes" label="Notes" rows="5"/>
-->

    </type>


    <type name="project_surveylocation" description="Survey Location" category="Field Project" >
      <property name="icon" value="/fieldproject/compass.png"/> 
<!--  
    <property name="form.resource.show" value="false"/>
-->
      <property name="form.name.label" value="Location"/>
      <property name="form.description.show" value="false"/>
      <property name="form.location.show" value="true"/>
      <property name="form.area.show" value="false"/>

<!-- 
features 
-->

      <column name="survey_type" label="Location Type"  type="enumerationplus"   values="file:/org/ramadda/geodata/fieldproject/resources/surveylocation_type.txt"/>
      <column name="equipment" label="Equipment"  type="enumerationplus"   values="file:/org/ramadda/geodata/fieldproject/resources/surveylocation_equipment.txt"/>
    </type>


  <type name="project_tls_scan"  description="TLS Scan" category="Field Project" pattern=".*\.RiSCAN.zip">
     <property name="icon" value="/fieldproject/tripod.png"/>
     <property name="form.datatype.show" value="false"/>
     <property name="form.altitude.show" value="false"/>
     <property name="form.altitude.show.top" value="false"/>
     <column name="equipment" label="Equipment"  type="enumerationplus"   values="file:/org/ramadda/geodata/fieldproject/resources/tls_equipment.txt"/>
   </type>

  <type name="project_gps"  description="GPS File" category="Field Project"  handler="org.ramadda.geodata.fieldproject.GpsTypeHandler">
     <property name="icon" value="/fieldproject/gps.png"/>
     <property name="form.datatype.show" value="false"/>
     <property name="form.altitude.show" value="false"/>
     <property name="form.altitude.show.top" value="false"/>
     <column name="format" label="Format"  type="enumerationplus"   values="file:/org/ramadda/geodata/fieldproject/resources/gps_equipment.txt"/>
     <column name="site_code" label="Site Code"  type="enumerationplus" />
     <column name="antenna_type" label="Antenna"  type="enumerationplus" />
     <column name="antenna_height" label="Antenna Height"  type="double" suffix="meters"/>
   </type>

  <type name="project_gps_rinex"  description="RINEX File" category="Field Project" pattern="(.*\.obs|.*\.rinex)"
        super="project_gps">
     <property name="icon" value="/fieldproject/unavco.png"/>
   </type>

  <type name="project_gps_raw"  description="Raw GPS File" category="Field Project" pattern=".*/GPS/Raw/T?\d+.*" super="project_gps">>
  </type>

  <type name="project_gps_opus"  description="OPUS Solution" category="Field Project" pattern=".*\.opus"
        handler="org.ramadda.geodata.fieldproject.OpusTypeHandler">
     <property name="icon" value="/fieldproject/tux.png"/>
     <property name="form.datatype.show" value="false"/>
     <property name="form.altitude.show" value="true"/>
     <property name="form.altitude.show.top" value="false"/>
     <column name="site_code" label="Site Code"  type="enumerationplus" />
     <column name="utm_x" label="UTM X"  type="double"/>
     <column name="utm_y" label="UTM Y"  type="double"/>
     <column name="itrf_x" label="ITRF X"  type="double"/>
     <column name="itrf_y" label="ITRF Y"  type="double"/>
     <column name="itrf_z" label="ITRF Z"  type="double"/>
   </type>

  <type name="project_gps_tiepoints"  description="Tiepoint File" category="Field Project">
  </type>

</types>
