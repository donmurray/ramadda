
<api handler="org.ramadda.repository.search.SpecialSearch" id="project_organization_search">

<!--The search form label -->
      <property name="label" value="Science Organizations"/>
      <property name="searchopen" value="true"/>

<!--What tabs to display results in -->
      <property name="tabs" value="list"/>

<!--Add these metadata search elements to the search form -->
    <property name="metadatatypes" value="project_funding,project_person"/>

<!--The entry point. This corresponds to the below API entry -->
      <property name="searchurl" value="/project/organizations/search"/>
      <property name="form.date.show" value="false"/>

<!--The entry type to search for -->
      <property name="type" value="project_organization"/>


<!-- None of the API entry points defined below require admin privileges -->
      <property name="admin" value="false"/>

      <api request="/project/organizations/search"    method="processSearchRequest" toplevel="false" name="Search Science Organizations"/>

</api>
