<types>

  <type name="fits_collection"  description="FITS Collection" handler="org.ramadda.repository.type.ExtensibleGroupTypeHandler" category="FITS" >
     <property name="icon" value="/fits/stars.gif"/>
     <property name="form.area.show" value="false"/>
     <property name="form.date.show" value="true"/>
     <property name="form.time.show" value="false"/>
     <property name="form.resource.show" value="false"/>
     <property name="form.datatype.show" value="false"/>
     <property name="form.name.label" value="Collection Name"/>
  </type>


  <type name="fits_data"  description="FITS Data File" handler="org.ramadda.geodata.fits.FitsTypeHandler" category="FITS" pattern=".*\.fits$">
     <property name="icon" value="/fits/fits.gif"/>
     <property name="form.show.resource" value="false"/>
     <property name="form.show.area" value="false"/>
     <property name="form.show.datatype" value="false"/>
     <property name="form.show.altitude" value="false"/>
     <property name="form.show.altitude.top" value="false"/>

     <column name="origin" type="enumerationplus"  label="Origin" cansearch="true" browsable="true" isindex="true"/>
     <column name="telescope" type="enumerationplus"  label="Telescope" cansearch="true" browsable="true" isindex="true"/>
     <column name="instrument" type="enumerationplus"  label="Instrument" cansearch="true" browsable="true" isindex="true"/>
     <column name="obstype"   type="enumerationplus"  label="Observation Type" />
   </type>


  <type name="fits_eclipse" super="fits_data"  description="FITS Eclipse Data File" handler="org.ramadda.geodata.fits.EclipseTypeHandler" category="FITS" >
     <property name="icon" value="/fits/eclipse.png"/>
     <column name="location"  label="Location"/>
     <column name="source"  label="Source"/>
     <column name="sourcetype"  label="Source Type"/>
     <column name="magnitude"  type="double" label="Magnitude"/>
   </type>

</types>
