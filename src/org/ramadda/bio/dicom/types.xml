<types>


  <type name="bio_dicom"  description="DICOM File"  category="Bio" pattern=".*\.dcm" handler="org.ramadda.bio.dicom.DicomTypeHandler">
     <property name="icon" value="/dicom/document-film.png"/>
     <property name="form.area.show" value="false"/>
     <property name="form.todate.show" value="false"/>
     <property name="form.fromdate.label" value="Date"/>
     <service link="bio.dicom.makethumbnail" id="dicomimage"/>
     <service link="bio.dicom.xml" id="dicomxml"/>
  </type>


  <type name="bio_dicom_test"  super="bio_dicom" description="DICOM Test File"   handler="org.ramadda.bio.dicom.DicomTypeHandler">
     <column name="PatientName" label="Patient Name"  />
     <column name="PatientID" label="Patient ID"  />
     <column name="PatientAge" label="Patient Age"  />
     <property name="dicom.metadata">
OperatorsName,
StationName
</property>

  </type>


  <type name="bio_dicom_xml"  description="DICOM Text File"  category="Bio">
     <property name="icon" value="/dicom/document-film.png"/>
     <property name="form.area.show" value="false"/>
     <property name="form.todate.show" value="false"/>
     <property name="form.fromdate.label" value="Date"/>
  </type>

</types>
