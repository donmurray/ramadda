<types>


  <type name="bio.image"  description="DICOM File"  category="Bio" pattern=".*\.dcm" handler="org.ramadda.bio.image.DicomTypeHandler">
     <property name="icon" value="/dicom/film.png"/>
     <property name="form.area.show" value="false"/>
     <property name="form.todate.show" value="false"/>
     <property name="form.fromdate.label" value="Date"/>
     <service link="bio.image_makethumbnail" id="dicomimage"/>
     <service link="bio.image_xml" id="dicomxml"/>
  </type>


  <type name="bio.image_test"  super="bio.image" description="DICOM Test File"   handler="org.ramadda.bio.image.DicomTypeHandler">
     <column name="PatientName" label="Patient Name"  />
     <column name="PatientID" label="Patient ID"  />
     <column name="PatientAge" label="Patient Age"  />
     <property name="dicom.metadata">
OperatorsName,
StationName
</property>

  </type>


  <type name="bio.image_xml"  description="DICOM Text File"  category="Bio">
<!--
     <property name="icon" value="/dicom/document-film.png"/>
-->
     <property name="form.area.show" value="false"/>
     <property name="form.todate.show" value="false"/>
     <property name="form.fromdate.label" value="Date"/>
  </type>

</types>
