<canvas xxxbgimage="${root}/images/logo.png">
<graph>
    <edgetype name="groupedby" arrow="-6" />       
    <edgetype name="link" arrow="6" width="1" color="#449944" />       
    <edgetype name="taggedby" arrow="-6" color="blue"/>       
    <edgetype name="etc" arrow="-6" color="red"/>       
    <nodetype    name="Node"  />

<nodetype    name="tag" parent="Node" fillcolor="0,153,153">
  <command label="Search tag" command="url(,${root}/entry/searchform?tag=%id%)"/>
  <shape>
  <shape>
    <text  fontstyle="bold" id="label"   text="%title%" from="c" to="c" color="black"  dy="2"/>
    <rrect src="label" id="rect" fillcolor="%fillcolor%" from="c" to="c" color="black"/>
  </shape>
  <shape  layout="h" src="rect" from="n" to="s" >
    <image url="${root}/icons/tag.gif" alt="Tag"/>
   </shape>
  </shape>
</nodetype>


<nodetype    name="group" parent="Node" fillcolor="#cccccc">
  <command label="View group" command="url(,${root}/entry/show?entryid=%id%)"/>
  <command label="Search group" command="url(,${root}/entry/searchform?group=%id%)"/>
  <shape>
    <text  fontstyle="bold" id="label"   text="%title%" from="c" to="c" color="black"  dy="2"/>
    <rrect src="label" fillcolor="%fillcolor%" from="c" to="c" color="black"/>
  </shape>
</nodetype>


<nodetype    name="skip" parent="Node" fillcolor="red">
  <shape>
    <text  fontstyle="bold" id="label"   text="%title%" from="c" to="c" color="black"  dy="2"/>
    <rrect src="label" fillcolor="%fillcolor%" from="c" to="c" color="black"/>
  </shape>
</nodetype>


<nodetype    name="entry" parent="Node" fillcolor="255,255,153" imagepath="${root}/icons/file.gif">
  <command label="View entry" command="url(,${root}/entry/show?entryid=%id%)"/>
  <shape>
  <shape>
    <text  fontstyle="bold" id="label"   text="%title%" from="c" to="c" color="black"  dy="2"/>
    <rrect src="label" id="rect" fillcolor="%fillcolor%" from="c" to="c" color="black"/>
  </shape>

  <shape  layout="h" src="rect" from="n" to="s" >
    <image url="%imagepath%"
           alt="Tag"/>
   </shape>
  </shape>
</nodetype>

<nodetype    name="imageentry" parent="Node" fillcolor="255,255,153" >
  <command label="View entry" command="url(,${root}/entry/show?entryid=%id%)"/>
  <shape>
  <shape>
    <text  fontstyle="bold" id="label"   text="%title%" from="c" to="c" color="black"  dy="2"/>
    <image   flags="beencenter" xvisible="false" src="label"   url="%image%" from="n" to="s" dy="2"/>
  </shape>
  </shape>
</nodetype>


<nodetype    name="level3radar" parent="entry" alt="Level 3 Radar" imagepath="${root}/icons/radar.gif"/>

${content}


</graph>
</canvas>
